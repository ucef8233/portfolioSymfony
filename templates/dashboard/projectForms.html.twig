{% extends 'dash.html.twig' %}
{% form_theme formProject 'bootstrap_4_layout.html.twig' %}
{% block title %}
{% if editMode %}
Modiffier un project
{% else %}
Ajouter un project
{% endif %}
{% endblock %}
{% block body %}
<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-8">
				<div class="card">
					<div class="card-header card-header-primary">
						<h4 class="card-title">Ajouter un projet</h4>
					</div>
					<div class="card-body">
						{{form_start(formProject)}}
						<div class="row">
							<div class="col-md-6"> {{form_row(formProject.nom,{'attr':{'placeholder':"Nom"},'label':false})}}</div>
							<div class="col-md-6"> {{form_row(formProject.lien,{'attr':{'placeholder':"Lien"},'label':false})}}</div>
						</div>
						<div class="row">
							<div class="col-md-5 ">
								{{form_row(formProject.imageFile,{'label':false})}}
							</div>
							<div class="col-md-7">
								{{form_row(formProject.description,{'attr':{'placeholder':"Description"},'label':false})}}
							</div>
						</div>
						<button type="submit" class="btn btn-primary pull-right ml-4">
							{% if editMode %}
							Modifier Project
							{% else %}
							Ajouter un Project
							{% endif %}
						</button>
					</div>
					{{form_end(formProject)}}
				</div>
			</div>
		</div>
	</div>
</div>
</div>{% endblock %}